<div class="container">
    <div class="row ">


        <div class="col-md-12 table-responsive">
            <table class="table table-bordered  table-sortable" id="tab_logic">
                <thead>
                <tr>
                    <th class="text-center">
                        District
                    </th>
                    <th class="text-center">
                        Mandal
                    </th>
                    <th class="text-center">
                        Time
                    </th>
                    <th class="text-center">
                        Alert
                    </th>
                    <th class="text-center">
                        Cancel
                    </th>
                </tr>
                </thead>
                <main>
                    <% if(alerts.length > 0){ %>
                    <% for (let alert of alerts){ %>
                    <tbody>
                    <tr class="hidden" data-id="0" id='addr0'>
                        <td data-name="District">
                            <h3 class="text-center lead"><%= alert.mandal.dist %></h3>
                        </td>
                        <td data-name="Mandal">
                            <h3 class="text-center lead"><%= alert.mandal.mandal %></h3>
                        </td>
                        <td data-name="sel">
                            <h3 class="text-center lead"><%= alert.time %></h3>
                        </td>
                        <td data-name="Alert">
                            <form action="/home/?id=<%= alert.mandal._id %>" method="POST">
                                <button class="btn btn-block btn-login btn-danger" type="submit">alert</button>
                            </form>

                        </td>
                        <td data-name="Delete">
                            <form action="/delete?id=<%= alert._id %>" method="POST">
                                <button class="btn btn-block btn-login btn-danger" type="submit">Delete</button>
                            </form>

                        </td>
                    </tr>
                    </tbody>
                    <% } %>
                    <% } %>

                </main>

            </table>
        </div>


    </div>
</div>


